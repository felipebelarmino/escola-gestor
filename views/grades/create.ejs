<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Nota</title>
    <link rel="stylesheet" href="/css/grades-create.css">
</head>

<body>
    <header class="header">
        <h1>Adicionar Nota</h1>
    </header>
    <main class="container">
        <form action="/grades" method="POST">
            <label for="studentId">Aluno:</label>
            <select id="studentId" name="studentId" required>
                <% students.forEach(student=> { %>
                    <option value="<%= student.id %>">
                        <%= student.name %>
                    </option>
                    <% }); %>
            </select>

            <label for="subject">Disciplina:</label>
            <input type="text" id="subject" name="subject" placeholder="Digite o nome da disciplina" required>

            <label for="grade">Nota:</label>
            <input type="number" step="0.01" id="grade" name="grade" placeholder="Digite a nota" required>

            <div class="form-actions">
                <a href="/grades" class="btn btn-cancel">Cancelar</a>
                <button type="submit" class="btn btn-save">Salvar</button>
            </div>
        </form>
    </main>
</body>

</html>